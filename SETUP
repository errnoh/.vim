#!/bin/sh

echo "Symlinking.."
ln -s .vim/.vimrc -t$HOME
ln -s ../vim-pathogen/autoload/pathogen.vim -tautoload

echo "Updating submodules"
git submodule update --init

echo "Remember: apt-get install exuberant-ctags"
echo "Remember: go get -u github.com/jstemmer/gotags"
echo "Remember: go get -u github.com/golang/lint/golint"
